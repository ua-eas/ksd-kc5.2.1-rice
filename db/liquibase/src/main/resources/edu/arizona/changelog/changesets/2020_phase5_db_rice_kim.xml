<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="FINI-7413_remove_rice_idm_initiate" author="KFS701" context="bootstrap, demo">
        <insert tableName="KRIM_PERM_T">
            <column name="PERM_ID" value="rice-IDM-P1"/>
            <column name="OBJ_ID" valueComputed="sys_guid()"/>
            <column name="VER_NBR" valueNumeric="1"/>
            <column name="PERM_TMPL_ID" valueComputed="(select perm_tmpl_id from krim_perm_tmpl_t
                    where nmspc_cd = 'KR-SYS' and nm = 'Initiate Document')"/>
            <column name="NMSPC_CD" value="KFS-SYS"/>
            <column name="NM" value="Initiate Document IdentityManagementDocument"/>
            <column name="ACTV_IND" value="Y"/>
        </insert>
        <insert tableName="KRIM_PERM_ATTR_DATA_T">
            <column name="ATTR_DATA_ID" value="rice-IDM-PA1"/>
            <column name="OBJ_ID" valueComputed="sys_guid()"/>
            <column name="VER_NBR" valueNumeric="1"/>
            <column name="PERM_ID" value="rice-IDM-P1"/>
            <column name="KIM_TYP_ID" valueComputed="(select kim_typ_id from krim_typ_t where nmspc_cd = 'KR-SYS'
                    and srvc_nm = 'documentTypePermissionTypeService')"/>
            <column name="KIM_ATTR_DEFN_ID" valueComputed="(select kim_attr_defn_id from krim_attr_defn_t where
                    nmspc_cd = 'KR-WKFLW' and nm = 'documentTypeName')"/>
            <column name="ATTR_VAL" value="IdentityManagementDocument"/>
        </insert>
    </changeSet>

